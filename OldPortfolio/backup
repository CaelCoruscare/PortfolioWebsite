    <script type="text/babel">
        var Letter = React.createClass({
            render: function() {

                var letterStyle = {
                    padding: 10,
                    backgroundColor: "#943F3F",
                    color:"aqua",	
                    display: "inline-block",
                    fontFamily: "monospace"	
                };

                return (
                    <div style={letterStyle}>
                    {this.props.children}
                    </div>
                );
            }
        });

        var Title = React.createClass({
            render: function() {

                var titleStyle = {
                    padding: 10,
                    backgroundColor: "#003F3F",
                    color:"aqua",
                    textAlign: "center",
                    fontFamily: "monospace"
                };

                return (
                    <div style={titleStyle}>
                        <h1>{this.props.title}</h1>
                    </div>
                );
            }
        });
        
        var PortfolioItem = React.createClass({
            render: function() {
                
                var portfolioBoxStyle = {
                    padding: 10,
                    backgroundColor: "#943F3F",
                    color:"aqua",	
                    display: "inline-block",
                    fontFamily: "monospace"	
                };

                return (
                    <div style={portfolioBoxStyle}>
                        <Title title={this.props.title}></Title>
                        <img src="./Portrait_Cael.jpg" style={{width:200}}></img>
                    </div>
                );
                
            }
        });


        var titles = ["Hunza", "Painted World", "Hey"];

        ReactDOM.render(
            <div style={{display: "inline-block"}}>
                    <PortfolioItem title={titles[0]}></PortfolioItem>
                    <PortfolioItem title={titles[1]}></PortfolioItem>
                    <PortfolioItem title={titles[2]}></PortfolioItem>
            </div>
            ,
            portfolio
        );

        </script>
